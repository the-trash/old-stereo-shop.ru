              %li.dropdown
                = sidebar_dropdown_link t('admin.settings')
                %ul.dropdown-menu
                  %li= link_to t('admin.settings'), admin_app.settings_path
                  %li= link_to t('admin.seo_settings'), admin_app.seo_settings_path

        .l-top-navbar-right-part
          %nav.collapse.navbar-collapse.navbar-right{ role: 'navigation' }
            %ul.nav.navbar-nav
              %li.dropdown
                = sidebar_dropdown_link t('admin.profile')
                %ul.dropdown-menu
                  %li= link_to t('admin.profile'), '#'
