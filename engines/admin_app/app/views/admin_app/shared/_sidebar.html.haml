                  %li= link_to t('admin.yandex_market_exports'), admin_app.yandex_market_exports_path

              %li.dropdown
                = sidebar_dropdown_link t('admin.news')
                %ul.dropdown-menu
                  %li= link_to t('admin.posts'), admin_app.posts_path
                  %li= link_to t('admin.post_categories'), admin_app.post_categories_path
                  %li= link_to t('admin.pages'), admin_app.pages_path
                  %li= link_to t('admin.newletters'), admin_app.newletters_path

              %li.dropdown
                = sidebar_dropdown_link t('admin.orders')
