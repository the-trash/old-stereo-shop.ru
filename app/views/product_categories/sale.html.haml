.b-product-category
  - if params[:id].present?
    %h3= "#{ resource.title } (#{ @products_without_paginate_by_category.size })"
  - else
    %h3= t('controllers.product_categories.sale.all_products', count: @products_without_paginate.size)

  = render partial: 'product_categories/includes/sale_nested_tree',
    locals: { product_categories: @product_categories } if @product_categories.present?

  .b-products
    = render partial: 'product_categories/includes/product', collection: @products, as: :product

= will_paginate @products
