%header
  #logo.item
    = link_to '', root_path, class: 'full-block-link'
    .image= image_tag 'application/logo.png'
  #catalog.item
    - if @product_categories.any?
      .btn
        Продукция
        %span.caret
      %ul.menu.main-catalog
        = build_product_category_ancestry_tree(@product_categories, { with_arrow: false })
        %li= link_to 'Sale', [:sale, :product_categories], class: 'pink'
  #menu.item
    %ul.menu
      %li
        = link_to I18n.t('views.pages.about'),
          page_path(:about),
          class: active_class_for_page(params, 'about')
      %li
        = link_to I18n.t('views.pages.contacts'),
          page_path(:contacts),
          class: active_class_for_page(params, 'contacts')
        .help-block
          %p= @settings[:shop_phone]
          %p.dark-pink= "#{ @settings[:shop_work_start] } - #{ @settings[:shop_work_end] }"
      %li= link_to t('brands'), [:brands]
      = render 'shared/includes/static_pages_links'

.container
  = render 'shared/search_bar'
