%header
  #logo.item
    = link_to '', root_path, class: 'full-block-link'
    .image= image_tag 'application/logo.png'
  #catalog.item
    - if @front_presenter.product_categories.any?
      .btn{ data: { toggle: 'dropdown' } }
        = t('catalog')
        %span.caret
      %ul.dropdown-menu.multi-level{ aria: { labelledby: 'dropdownMenu' } }
        = build_dropdown_product_category_nested_tree(@front_presenter.product_categories)
        %li= link_to t('sale'), [:sale, :product_categories], class: 'pink'
  #menu.item
    %ul.menu
      %li
        = link_to I18n.t('views.pages.about'),
          page_path(:about),
          class: active_class_for_page(params, 'about')
      %li
        = link_to I18n.t('views.pages.contacts'),
          page_path(:contacts),
          class: active_class_for_page(params, 'contacts')
        .help-block
          - split_by_divider(@settings[:shop_phone]).each do |phone|
            %p= phone
          %p.dark-pink= "#{ @settings[:shop_work_start] } - #{ @settings[:shop_work_end] }"
          .l-call-me
      %li= link_to t('brands'), [:brands]
      = render 'shared/includes/static_pages_links'
  = render 'shared/user_widget'

.container
  = render 'shared/search_bar'
