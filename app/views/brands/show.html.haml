.b-brand
  %h3= resource.title
  .b-brand-site-link
    = link_to resource.site_link, resource.site_link, target: :_blank
  .description
    = resource.description.html_safe

  - if @products.present?
    %h4= t('products_from_brand')

    .b-products
      = render partial: 'product_categories/includes/product', collection: @products, as: :product

    = will_paginate @products
